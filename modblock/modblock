#!/bin/bash

function modhelp {
	echo '''
 Kernel Module Blocker for Unix-like systems (Still Testing)
  You can use this script to block any kernel module.
  Usage:
	-b [mod] #to block any module
	-a [mod] #to allow any blocked module
	-l       #to list all "Modules on System" and "Blocked Modules"
	-lc      #like previous but compact
	-lb      #to list only blocked modules
	-la      #to list only non-blocked modules
	-u       #use it when you finish to probe all modules and update your initrd
	-i       #to install this application to your system
	-aa      #to empty the blacklist and allow all blocked modules
	any thing else:
	         #to show this help ;)
'''
}

if [ "$1" != "-b" ] && [ "$1" != "-a" ] && [ "$1" != "-l" ] && [ "$1" != "-lc" ] && [ "$1" != "-lb" ] && [ "$1" != "-la" ] && [ "$1" != "-u" ] && [ "$1" != "-i" ] && [ "$1" != "-aa" ]
then
	modhelp
exit
fi

blst='/etc/modprobe.d/modblock.conf'
touch $blst

function list {

	if [ "$1" == "blocked" ]
	then
		grep -v '^$' $blst|sed 's/.*[ ]//'
		exit
	elif [ "$1" == "allowed" ]
	then
		if [ -s $blst ]
		then
			lsmod|grep -v Module|sed 's/[ ].*//'|grep -v "`grep -v '^$' $blst|sed 's/.*[ ]//'`"
		else
			lsmod|grep -v Module|sed 's/[ ].*//'
		fi
		exit
	else
		echo "Modules on System:"
		a=`lsmod|grep -v Module|sed 's/[ ].*//'`
		if [ "$1" == "compact" ];then
			echo "  "$a
		else		
			for i in $a
			do
				echo "  $i"
			done
		fi
	
		echo
		echo "Blocked Modules:"
		a=`grep -v '^$' $blst|sed 's/.*[ ]//'`
		if [ -z "$a" ];then
			echo "  No modules were blocked";fi
		if [ "$1" == "compact" ];then
			echo $a
		else
			for i in $a
			do
				echo "  $i"
			done
		fi
	fi

}
for a in $@
do
	if [ "$a" == "-b" ] #block
	then
		case="block"
		continue
	elif [ "$a" == "-a" ] #allow
	then
		case="allow"
		continue
	elif [ "$a" == "-l" ] #list
	then
		list
		continue
	elif [ "$a" == "-lc" ] #list compact
	then
		list compact
		continue
	elif [ "$a" == "-lb" ] #list blocked
	then
		list blocked
		continue
	elif [ "$a" == "-la" ] #list allowed
	then
		list allowed
		continue
	elif [ "$a" == "-u" ] #probe modules and update initrd
	then
		depmod -ae
		update-initramfs -u
	elif [ "$a" == "-i" ] #install
	then
		cp $0 /usr/sbin
		app=`echo $0|sed 's/.*\///'`
		echo "ModuleBlocker Installed"
		continue
	elif [ "$a" == "-aa" ] #empty blacklist and allow all modules
	then
		echo >"$blst"
		continue
	fi
	
	if [ "$case" != "block" ] && [ "$case" != "allow" ]
	then
		modhelp
	fi
	
	found=`lsmod|grep $a` #In Modules
	inbls=`cat $blst|grep $a` #In Blacklist

	if [ "$case" == "block" ]
	then
		if [ -z "$found" ];then
			echo "$a is not found on system"
		elif [ ! -z "$inbls" ];then
			echo "$a is already blocked"
		elif [ -z "$a" ];then
			echo "Nothing to block"
		else
			echo "blacklist" $a >> "$blst"		
			echo "blocked $a"
		fi
	elif [ "$case" == "allow" ]
	then
		if [ -z "$found" ];then
			echo "$a is not found on system"
		elif [ -z "$inbls" ];then
			echo "$a is not blocked"
		elif [ -z "$a" ];then
			echo "Nothing to allow"
		else
			sed "/$a/d" $blst > ${blst}.save
			mv ${blst}.save ${blst}
			echo "allowed $a"
		fi

	fi
done
exit